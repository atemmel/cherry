#!./zig-out/bin/cherry
import fs

optimize := "ReleaseSafe" # default, but can be overridden
if (len $argv) != 0 {
    $optimize = (get $argv 0)
}

install-dir := /usr/bin

zig build install "-Doptimize={optimize}"

sudo cp ./zig-out/bin/cherry $install-dir

if !(fs'exists /bin/cherry) {
    sudo ln -s "{install-dir}/cherry" /bin/cherry
}
